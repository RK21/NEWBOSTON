<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="100" >
 <ScrollView android:layout_weight="50" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout
		  android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"  
		     >
    <TextView
        android:id="@+id/tvWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter width of photo" />

    <EditText
        android:id="@+id/etWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "Width"
        android:inputType="number" >

     
    </EditText>

    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      
        android:text="Enter height of photo" />

    <EditText
        android:id="@+id/etHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "Height"
        android:inputType="number" />

    <EditText
        android:id="@+id/eText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "Enter Text for Watermark" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/eSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint = "Enter TextSize for Watermark" />

<LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="horizontal"
    
     >

    <Button
        android:id="@+id/bResize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resize" />

    <Button
        android:id="@+id/bWatermark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Watermark" />

    <Button
        android:id="@+id/bGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grey" />

    <Button
        android:id="@+id/bSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save" />
    
    </LinearLayout>
    
</LinearLayout>
</ScrollView>
<LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:layout_weight="50"
     >
<ImageView
    android:id="@+id/ivDisplay"
    android:layout_width="400dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    android:src="@drawable/ic_launcher" />

</LinearLayout>
</LinearLayout>
